---
import { MENU } from 'config'
import ThemeToggle from './ThemeToggle.astro'
---

<header class="sticky top-0 w-full z-20 border-b border-base">
    <nav class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/" class="flex items-center">
            <img src="/logo.svg" class="h-8 dark:hidden" alt="RandName Logo" />
            <img src="/logo-dark.svg" class="h-8 hidden dark:block" alt="RandName Dark Logo" />
        </a>

        <div class="flex items-center md:order-2 space-x-3 md:space-x-2 rtl:space-x-reverse">
            <ThemeToggle />
            <div class="i-line-md:menu text-xl md:hidden"></div>
        </div>
        
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1">
            <ul class="flex flex-col p-4 mt-4 font-medium border border-base rounded-lg md:p-0 md:mt-0 md:space-x-8 md:flex-row md:border-0">
                {MENU.map((item) => (
                    <li>
                        <a 
                            href={item.url}
                            class="block py-2 px-3 text-base rounded md:p-0"
                        >
                            {item.name}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </nav>
</header>